{
    "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

    "extends": "./api-extractor.jsonc",
    "projectFolder": "..",
    "mainEntryPointFilePath": "<projectFolder>/packages/js-bson/out/js_bson.d.ts",
    "compiler": {
        "tsconfigFilePath": "<projectFolder>/packages/js-bson/tsconfig.json",
        "overrideTsconfig": {
            "$schema": "http://json.schemastore.org/tsconfig"
        },
        "skipLibCheck": true
    },
    "apiReport": {
        "enabled": true,
        "reportFileName": "jbson.api.md",
        "reportFolder": "<projectFolder>/packages/js-bson/api/",
        "reportTempFolder": "<projectFolder>/packages/js-bson/api/temp/"
        // "includeForgottenExports": false
    }
}
