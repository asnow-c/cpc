{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ESNext"],
    "strict": true,
    "skipDefaultLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,

    "paths": {
      "cpcall/node": ["./src/node/index.js"],
      "cpcall/web": ["./src/web/index.js"],
      "cpcall": ["./src/cpc/cpc.js"],
      "#lib/*": ["./src/cpc/lib/*"]
    }
  },
  "exclude": ["node_modules", "out"]
}
