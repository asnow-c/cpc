{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "lib": ["ESNext"],
        "strict": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "#rt/*": ["./src/*"],
            "#lib/*": ["./src/lib/*"]
        },
        "noEmit": true
    },
    "exclude": ["node_modules"],
    "include": ["src", "test"]
}
