{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ESNext"],
    "strict": true,
    "skipDefaultLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "cpcall/node": ["./src/node/mod.ts"],
      "cpcall/web": ["./src/web/mod.ts"],
      "cpcall": ["./src/cpc/mod.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
